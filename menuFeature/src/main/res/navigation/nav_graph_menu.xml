<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_menu">

  <fragment
      android:id="@+id/menuFragment"
      android:name="com.example.menufeature.MenuFragment"
      android:label="MenuFragment">
    <action
        android:id="@+id/menu_play"
        app:destination="@id/nav_graph_play" />
    <action
        android:id="@+id/menu_settings"
        app:destination="@id/nav_graph_settings" />
    <action
        android:id="@+id/menu_leaderboard"
        app:destination="@id/nav_graph_leaderboard" />
  </fragment>

  <include app:graph="@navigation/nav_graph_play" />
  <include app:graph="@navigation/nav_graph_settings" />
  <include app:graph="@navigation/nav_graph_leaderboard" />
</navigation>